<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/username"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:hint="Username..."
        android:padding="@dimen/activity_horizontal_margin"
        android:textColorHint="#ffffff"
        android:gravity="center"
        style="@style/Widget.AppCompat.EditText" />

    <Button
        android:id="@+id/signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign_in"
        android:textColor="#ffffff"
        android:background="#ffc300"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:padding="@dimen/activity_horizontal_margin"
        android:ems="10"
        android:id="@+id/password"
        android:hint="Password..."
        android:gravity="center"
        android:textColorHint="#ffffff"
        style="@android:style/Widget.Holo.Light.EditText"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/username"
        android:layout_alignLeft="@+id/username"
        android:layout_alignStart="@+id/username" />

    <Button
        android:text="Reset Password"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/reset_password"
        android:textColor="#ffffff"
        android:fontFamily="@string/com_facebook_send_button_text"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="#ffc300"
        android:layout_alignBaseline="@+id/register"
        android:layout_alignBottom="@+id/register"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/register"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="#ffffff"
        android:fontFamily="@string/common_signin_button_text"
        android:background="#ffc300"
        android:textSize="15sp"
        android:layout_gravity="center"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_above="@+id/signin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="100dp"
        android:layout_width="150dp" />
</RelativeLayout>